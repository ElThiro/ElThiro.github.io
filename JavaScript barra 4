const boton = document.getElementById("botonMenu");
const menu = document.getElementById("miMenu");

boton.addEventListener("click", () => {
  menu.classList.toggle("show");
});

// Opcional: cerrar el menú si se hace clic fuera
window.addEventListener("click", (e) => {
  if (!boton.contains(e.target) && !menu.contains(e.target)) {
    menu.classList.remove("show");
  }
});
// Ocultar todas las secciones al iniciar
document.querySelectorAll(".seccion").forEach(s => s.style.display = "none");

// Mostrar sección de proyectos al hacer clic en el menú
document.querySelectorAll(".menu p").forEach(opcion => {
  opcion.addEventListener("click", () => {
    const seccion = opcion.getAttribute("data-section");
    if(document.getElementById(seccion)) { // verifica que exista la sección
      document.querySelectorAll(".seccion").forEach(s => s.style.display = "none");
      document.getElementById(seccion).style.display = "block";
    }
  });
});
